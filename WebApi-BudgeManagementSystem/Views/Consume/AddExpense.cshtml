@model IEnumerable<WebApi_BudgeManagementSystem.ViewModels.ExpenseViewModel>

@{
    ViewBag.Title = "AddExpense";
}

<h2>Add Expense</h2>

<form mothod="Post" asp-action="AddExpense" asp-controller="ConsumeController" class="form-group">

    <h1>Binding data into Dropdown list</h1>
    <div class="form-group">
        <label asp-for="inc_cat" class="control-label">Expense Category</label>
        <select style="height:auto" class="dropdown form-control">
            <option value="" selected disabled> Select Category</option>
            @foreach (var item in Model)
            {
                <option>@item.exp_cat</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="exp_amount" class="control-label">Add Amount</label>
        <label asp-for="exp_amount" class="control-label"></label>
        <input asp-for="exp_amount" class="form-control" />
        <span asp-validation-for="exp_amount" class="text-danger"></span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Add Expense </button>
    </div>
</form>

