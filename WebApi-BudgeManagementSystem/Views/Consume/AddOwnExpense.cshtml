@model WebApi_BudgeManagementSystem.ViewModels.AddOwnExpenseViewModel

@{
    ViewBag.Title = "AddOwnExpense";
}

<h2>Add Own Expence</h2>


@using (Html.BeginForm("AddOwnExpense", "Consume", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                <div>
                    @Html.LabelFor(model => model.oexp_name, "Add Own Category", htmlAttributes: new { @class = "control-label" })
                </div>
                @Html.EditorFor(model => model.oexp_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.oexp_name, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.uid, new { Value = @Int32.Parse(HttpContext.Current.Session["uid"].ToString()) })
        @Html.HiddenFor(model => model.flag, new { Value = true })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("AddOwnExpense", "Consume", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.LabelFor(model => model.exp_amount, "Select Category", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.DropDownListFor(model => model.oexp_name, new SelectList(Model.categories), "Select Category", new { @class = "form-control" })
        <br/>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.exp_amount, "Add Amount", new { htmlAttributes = new { @class = "form-control" } })
                <br>
                @Html.EditorFor(model => model.exp_amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.exp_amount, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.uid, new { Value = @Int32.Parse(HttpContext.Current.Session["uid"].ToString()) })
        @Html.HiddenFor(model => model.flag, new { Value = false })


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Income" class="btn btn-primary" />
            </div>
        </div>
    </div>
}





















